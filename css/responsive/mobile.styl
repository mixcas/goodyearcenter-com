// VARS
$blue-color = #1f55ad
$light-blue = #80b1d9
$dark-blue = rgb(10,26,52)
$white-color = #fff

body
  width: 100vw
  max-width: 100%
  overflow-x: hidden

#header
  position: absolute
  top: 0
  width: 100%
  z-index: 1000

#logo
  max-width: 68px

.menu-toggle
  width: 24px
  height: 24px

  svg
    height: 24px

    path
      fill: $blue-color


// MENU
#menu
  background-color: $blue-color
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  display: none
  z-index: 100
  color: $white-color

.show-menu
  #menu
    display: block

  .menu-toggle
    svg path
      fill: $white-color

.home-background
  background-image: url('/img/dist/home_bg.gif')
  background-size: cover
  background-position: center

// SCROLL TO PROMOCIONES
.scroll-to-promociones
  opacity: 0.8
  svg
    width: 100%
    max-width: 85px
    fill: $white-color
    stroke: $white-color

// PROMOCIONES
.promociones
  background-image: url('/img/dist/ninos.png')
  background-color: $light-blue
  background-position: center
  background-size: contain
  background-repeat: no-repeat
  position: relative

.promociones-column
  height: 100vh

.full
  width: 100vw
  height: 100vh
  max-width: 100%

// TERMS
#terms
  position: absolute
  top: 0;
  right: 0;
  max-height: 100vh;
  overflow: scroll;
  color: $white-color
  transition: transform 300ms
  transform: translateX(100%)
  background-color: $dark-blue
  overflow-x: hidden

.close-terms
  position: absolute
  top: 20px
  left: 0px
  svg
    width: 76px
    fill: $white-color
    stroke: $white-color

.show-terms
  #terms
    transform: translateX(0%)



